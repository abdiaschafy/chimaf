<div class="top-content">

    <div class="inner-bg">
        <div class="container">

            <div class="row">
                <div class="col-sm-6 col-sm-offset-3 form-box">
                    <div class="form-top">
                        <div class="form-top-left">
                            <h3>Login to our site</h3>
                            <p>Enter your username and password to log on:</p>
                        </div>
                        <div class="form-top-right">
                            <i class="fa fa-lock"></i>
                        </div>
                    </div>
                    <div class="form-bottom">
                        <form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin cil-form" role="form">

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                            <div class="text-danger">
                                {{ form_errors(loginForm._username) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(loginForm._username) }}
                                {{ form_widget(loginForm._username, {'full_name': '_username','id': 'username', 'value' : last_username }) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(loginForm._password) }}
                                {{ form_widget(loginForm._password, {'full_name': '_password','id': 'password'}) }}
                            </div>
                            <button type="submit" class="btn btn-primary" name="_submit">{{ 'security.login.submit' | trans({}, 'fos_user_bundle') }}</button>
                        </form>

                        <a href="{{ path('fos_user_resetting_request') }}" class="forgot-password">
                            {{ 'connexion.form.url_label.oubli_mot_de_passe' | trans({}, 'fos_user_bundle') }}
                        </a>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


