
{% block page_content %}

    <div class="row bg-form-cil margin-auto-15 padding-10">
        <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4 user-account">
            <h3 class="text-primary">{{ 'password_oublie.form.title.oubli_mot_de_passe' | trans({}, 'password_oublie_form') }}</h3>
            <hr>
            <label for="username" class="text-color-cil">{{ 'password_oublie.form.text.requete_mail' | trans({}, 'password_oublie_form') }}</label>
            <hr>
            <form action="{{ path('fos_user_resetting_send_email') }}" method="POST"  class="form-signin cil-form" role="form">
                <div class="twPc-divStats">
                    {{ form_label(resetPwdForm._username) }}
                    {{ form_widget(resetPwdForm._username, {'full_name': '_username','id': 'username', 'value' : last_username }) }}

                    {{ form_label(resetPwdForm.captcha) }}
                    {{ form_widget(resetPwdForm.captcha, {'full_name': 'captcha', 'id': 'captcha'}) }}
                    <div>
                        <input type="submit"  class="btn btn-lg btn-primary cil-btn btn-block btn-signin" value="{{ 'ux.button_label.reinitialiser_mot_de_passe' | trans({}, 'ux') }}" />
                    </div>
                </div>
            </form>
        </div>
    </div>

{% endblock %}
