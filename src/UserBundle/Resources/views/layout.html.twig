{%  extends "::base.html.twig" %}

{% block title %}
    {{ parent()~' Connexion' }}
{% endblock %}

{% block body %}

    <div class="container back">
        {% for type, messages in app.session.flashBag.all %}
            {% for message in messages %}
                <div class="{{ type }}">
                    {{ message|trans({}, 'FOSUserBundle') }}
                </div>
            {% endfor %}
        {% endfor %}

        <div class="col-md-3">
            <p></p>
            <p></p>
        </div>

        {% block fos_user_content %}
        {% endblock fos_user_content %}

        <div class="col-md-3">
            <p></p>
            <p></p>
        </div>
    </div>

{% endblock %}
