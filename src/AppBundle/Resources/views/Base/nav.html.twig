<div class="navbar navbar-default" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="{{ path('chimaf_home') }}" class="navbar-brand">
            <span class="text-primary"><i class="fa fa-globe">CHIMAF SARL</i></span>
            </a>
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li><a href="{{ path('chimaf_home') }}"><i class="fa fa-home icon-white"></i> Accueil</a></li>
                <li class="divider-vertical"></li>
                <li>
                    <a href="{{ path('categorie_all') }}">
                        <i class="fa fa-table"></i> Nos Produits
                    </a>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a href="{{ path('cart_list') }}">
                        <i class="fa fa-shopping-cart"></i> Votre panier
                        {% if app.session.get('cart')|length > 0 %}
                            <span class="badge" style="background: red;">{{ app.session.get('cart')|length }}</span>
                        {% endif %}
                    </a>
                </li>
                {% if is_granted("IS_AUTHENTICATED_FULLY") %}
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="fa {{ is_granted('ROLE_ADMIN') ? 'fa-user-secret text-success' : 'fa-user' }}"></i>
                            <span class="text-bold">&nbsp;Bonjour,</span>
                            <span class="text-color-black text-bold">{{ app.user.firstname }}</span>
                            {% if is_granted('ROLE_ADMIN') %}
                                <span class="text-primary text-bold"><i>:&nbsp;{{ app.user.getRole() }}</i></span>
                            {% endif %}
                            <span class="glyphicon glyphicon-chevron-down"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <div class="navbar-login">
                                    <div class="row">
                                        <div class="col-lg-4">
                                            <p class="text-center">
                                                <i class="glyphicon glyphicon-user icon-size text-primary"></i>
                                            </p>
                                        </div>
                                        <div class="col-lg-8">
                                            <p class="text-left text-primary"><strong>{{ app.user.firstname~' '~app.user.lastname }}</strong></p>
                                            <p class="text-left small">{{ app.user.email }}</p>
                                            {% if is_granted('ROLE_ADMIN') %}
                                                <p class="text-left">
                                                    <a href="{{ path('user_list') }}"
                                                       class="btn btn-info btn-block btn-sm">
                                                        <i class="fa fa-cogs"></i>
                                                        Gérer les utilisateurs
                                                    </a>
                                                </p>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <div class="navbar-login navbar-login-session">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <p>
                                                <a href="{{ path('fos_user_security_logout') }}" class="btn btn-danger btn-block">Déconnexion</a>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </li>
                {% else %}
                    <li>
                        <a href="{{ path('fos_user_security_login') }}"><i class="fa fa-lock"></i> Login</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</div>